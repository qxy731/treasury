<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<!-- 指定资源编码类型 -->
	<constant name="struts.i18n.encoding" value="utf-8"/>
	<!-- 开启使用开发模式，详细错误提示 -->
	<constant name="struts.devMode" value="true"/>
	<constant name="struts.configuration.xml.reload" value="true"/>
	<constant name="struts.serve.static.browserCache" value="false" /> 
	<!-- 将对象交给spring管理  -->
    <constant name="struts.objectFactory" value="spring" />
	<!-- 默认后缀名 -->
    <constant name="struts.action.extension" value="action" />
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <constant name="struts.convention.action.fileProtocols" value="jar,wsjar" />
    <constant name="struts.convention.action.packages" value="com.soule.app,com.soule.crm"/>
    <constant name="struts.convention.default.parent.package" value="json-default"/>
   <!--
   	<constant name="struts.convention.package.locators" value="action,app" /> 
   	<constant name="struts.convention.package.locators.basePackage" value="com.soule.app.sys" />   -->
    
	<constant name="struts.ui.theme" value="simple"/>
	<constant name="struts.multipart.maxSize" value="10485760"/> 
	<include file="struts-default.xml" />
	<!--
	<include file="config/struts/sysmgr-struts.xml" />
	<include file="config/struts/code-create-struts.xml" />
	<include file="config/struts/common-struts.xml" />
	-->
</struts>
